@page
@model ControlGastos.WebUI.Pages.Incomes.IndexModel
@using ControlGastos.Domain.Entities
@{
    ViewData["Title"] = "Ingresos Recurrentes";
}

<h1>Ingresos Recurrentes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary mb-3">+ Nuevo ingreso</a>
</p>

<div class="row">
    @foreach (var i in Model.Incomes)
    {
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@i.Name</h5>
                    <p class="card-text mb-1">
                        <strong>Día:</strong> @i.DayOfIncome
                    </p>
                    <p class="card-text mb-3">
                        <strong>Monto:</strong> @i.FixedAmount.ToString("C")
                    </p>
                    <div class="mt-auto">
                        <div class="btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@i.Id" class="btn btn-secondary btn-sm">Editar</a>
                            <a asp-page="Delete" asp-route-id="@i.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
