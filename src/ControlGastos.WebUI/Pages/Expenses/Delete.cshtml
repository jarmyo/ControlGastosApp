@page "{id:int}"
@model ControlGastos.WebUI.Pages.Expenses.DeleteModel

<h1>Eliminar Gasto</h1>

<p>¿Estás seguro que deseas eliminar el gasto <strong>"@Model.Name"</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="ExpenseId" />
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
