<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ControlGastos.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ControlGastos.Mobile"
    xmlns:views="clr-namespace:ControlGastos.Mobile.Views"
    Title="ControlGastos.Mobile">
    <FlyoutItem Title="Dashboard" Icon="dashboard.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Gastos" Icon="expenses.png">
        <ShellContent ContentTemplate="{DataTemplate views:ExpensesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Pagos" Icon="payments.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaymentsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Ingresos" Icon="incomes.png">
        <ShellContent ContentTemplate="{DataTemplate views:IncomesPage}" />
    </FlyoutItem>

</Shell>
